---
// src/components/AdSense.astro
import { ADSENSE_CONFIG } from "../consts";
---

<div class="adsense-wrapper">
  <ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client={ADSENSE_CONFIG.client}
    data-ad-slot={ADSENSE_CONFIG.slot}
    data-ad-format="auto"
    data-full-width-responsive="true"></ins>
</div>

<style>
  .adsense-wrapper {
    margin: 2.5rem 0;
    text-align: center;
    min-height: 10px;
  }

  .test-ad {
    background: linear-gradient(135deg, #667eea15, #764ba215);
    border: 2px dashed #667eea;
    border-radius: 12px;
    padding: 2rem;
    min-height: 250px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .test-ad p {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: #667eea;
  }

  .test-ad small {
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .adsense-wrapper {
      min-height: 140px;
      margin: 2rem 0;
    }
  }
</style>
