---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const currentUrl = Astro.url.pathname;
const { lang = 'ko' } = Astro.props;

// 같은 언어 + 현재 글 제외 + 최신순 3개
const recentPosts = allPosts
  .filter(post => post.data.lang === lang)  // 같은 언어만
  .filter(post => `/blog/${post.id}/` !== currentUrl)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

{recentPosts.length > 0 && (
  <section class="related-posts">
    <h3>{lang === 'ko' ? '다른 글 보기' : 'More Articles'}</h3>
    <div class="posts-grid">
      {recentPosts.map((post) => (
        <a href={`/blog/${post.id}/`} class="post-card">
          <h4>{post.data.title}</h4>
          <p class="description">{post.data.description}</p>
          <span class="read-more">
            {lang === 'ko' ? '읽어보기' : 'Read more'}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .related-posts {
    margin: 3rem 0 2rem;
  }

  .related-posts h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }

  .posts-grid {
    display: grid;
    gap: 1rem;
  }

  .post-card {
    display: block;
    padding: 1.5rem;
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
  }

  .post-card h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .description {
    font-size: 0.9375rem;
    color: #6b7280;
    margin: 0 0 1rem 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: #667eea;
    font-weight: 600;
  }

  .read-more svg {
    width: 14px;
    height: 14px;
    transition: transform 0.2s ease;
  }

  .post-card:hover .read-more svg {
    transform: translateX(3px);
  }

  @media (max-width: 768px) {
    .posts-grid {
      gap: 0.875rem;
    }
    
    .post-card {
      padding: 1.25rem;
    }
  }
</style>