---
// src/components/CoupangLink.astro
interface Props {
  title: string;
  url: string;
  description: string;
}

const { title, url, description } = Astro.props;
---

<div class="smart-link">
  <a href={url} target="_blank" rel="noopener noreferrer nofollow">
    <div class="link-header">
      <h4 class="link-title">{title}</h4>
    </div>
    <p class="link-desc">{description}</p>
    <div class="link-footer">
      <span class="cta">쿠팡 최저가 확인 →</span>
    </div>
  </a>
</div>

<style>
  .smart-link {
    margin: 1.75rem 0;
    border: 1px solid #E2E8F0;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .smart-link:hover {
    border-color: #CBD5E1;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .smart-link a {
    display: block;
    padding: 1.25rem;
    text-decoration: none;
    color: inherit;
  }

  .link-header {
    margin-bottom: 0.5rem;
  }

  .link-title {
    font-size: 1rem;
    font-weight: 700;
    color: #0F172A;
    margin: 0;
  }

  .link-desc {
    font-size: 0.875rem;
    color: #64748B;
    margin: 0 0 0.75rem 0;
    line-height: 1.5;
  }

  .link-footer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .cta {
    font-size: 0.875rem;
    color: #3B82F6;
    font-weight: 600;
  }

  .smart-link:hover .cta {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .link-title {
      font-size: 0.9375rem;
    }
  }
</style>