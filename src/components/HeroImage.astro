---
import { Image } from "astro:assets";

interface Props {
  heroImage?: any;
  title: string;
}

const { heroImage, title } = Astro.props;
---

{heroImage && (
  <div class="hero-image">
    <div class="hero-image-wrapper">
      <Image
        width={1400}
        height={700}
        src={heroImage}
        alt={title}
        quality={85}
      />
    </div>
  </div>
)}

<style>
  .hero-image {
    width: 100%;
    max-width: 1400px;
    margin: 2rem auto 3rem;
    padding: 0 2rem;
  }

  .hero-image-wrapper {
    width: 100%;
    max-height: 500px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  .hero-image img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .hero-image {
      padding: 0 1rem;
      margin: 1.5rem auto 2rem;
    }

    .hero-image-wrapper {
      border-radius: 12px;
    }
  }
</style>