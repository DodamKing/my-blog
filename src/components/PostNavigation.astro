---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const { currentId, lang = 'ko' } = Astro.props;

// 같은 언어 글만 필터링 후 날짜순 정렬
const sameLangPosts = allPosts
  .filter(p => p.data.lang === lang)
  .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());

const currentIndex = sameLangPosts.findIndex(p => p.id === currentId);
const prevPost = currentIndex > 0 ? sameLangPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sameLangPosts.length - 1 ? sameLangPosts[currentIndex + 1] : null;
---

{(prevPost || nextPost) && (
  <nav class="post-navigation">
    {prevPost ? (
      <a href={`/blog/${prevPost.id}/`} class="nav-link nav-prev">
        <span class="nav-label">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          {lang === 'ko' ? '이전 글' : 'Previous'}
        </span>
        <span class="nav-title">{prevPost.data.title}</span>
      </a>
    ) : (
      <div></div>
    )}
    
    {nextPost && (
      <a href={`/blog/${nextPost.id}/`} class="nav-link nav-next">
        <span class="nav-label">
          {lang === 'ko' ? '다음 글' : 'Next'}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
        <span class="nav-title">{nextPost.data.title}</span>
      </a>
    )}
  </nav>
)}

<style>
  .post-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 2.5rem 0;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    text-decoration: none;
    background: #ffffff;
    transition: all 0.2s ease;
    min-height: 100px;
  }

  .nav-link:hover {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
    transform: translateY(-2px);
  }

  .nav-prev .nav-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .nav-next {
    text-align: right;
  }

  .nav-next .nav-label {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.375rem;
  }

  .nav-label {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 600;
  }

  .nav-label svg {
    width: 16px;
    height: 16px;
  }

  .nav-title {
    font-size: 1rem;
    color: #1a1a1a;
    font-weight: 500;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .post-navigation {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
    
    .nav-next {
      text-align: left;
    }
    
    .nav-next .nav-label {
      justify-content: flex-start;
    }

    .nav-link {
      padding: 1rem;
      min-height: 80px;
    }
  }
</style>