<div class="adsense-wrapper">
  <ins 
    class="adsbygoogle"
    style="display:block"
    data-ad-client="ca-pub-7892198097991803"
    data-ad-slot="4105774619"
    data-ad-format="auto"
    data-full-width-responsive="true"
  ></ins>
</div>

<script>
  // TypeScript 타입 선언
  declare global {
    interface Window {
      adsbygoogle: any[];
    }
  }

  // AdSense 초기화
  try {
    (window.adsbygoogle = window.adsbygoogle || []).push({});
  } catch (e) {
    console.error('AdSense error:', e);
  }
</script>

<style>
  .adsense-wrapper {
    margin: 2.5rem 0;
    text-align: center;
    min-height: 100px;
  }
</style>